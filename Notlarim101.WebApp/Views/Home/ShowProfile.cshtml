@using Notlarim101.Entity
@model NotlarimUser
@{
    ViewBag.Title = "Kullanıcı";
}

<div class="container">
    <div class="row">
        <h2>@ViewBag.Title</h2>
        <hr />
    </div>
    <div class="row">
        <div class="col-md-2">
            <img src="~/images/@Model.ProfileImageFileName" class="rounded-circle" width="148" height="148" alt="Alternate Text" />
        </div>
        <div class="col-md-8">
            <h3>@(Model.Name + " " + Model.Surname)</h3>
            <br />
            <h6><b>Username: </b>@Model.Username</h6>
            <h6><b>Email: </b>@Model.Email</h6>
            <br />
            <h6><a href="#">More...</a></h6>
        </div>
        <div class="col-md-2 text-end">
            <div class="dropdown">
                <button class="btn btn-success dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                    Options
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                    <li><a class="dropdown-item" href="@Url.Action("EditProfile")">Düzenle</a></li>
                    <li><a class="dropdown-item" href="@Url.Action("DeleteProfile")" onclick="return confirm('Are you Sure remove this account');">Sil</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

